<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_backgroud"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/list_item_space_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/list_item_width"
            android:layout_height="@dimen/list_item_height"
            android:layout_margin="18dp" />

        <TextView
            android:id="@+id/list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/list_item_icon"
            android:gravity="center_vertical"
            android:textColor="@color/list_item_text_color" />
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
        >
        <TextView
            android:gravity="center"
            android:id="@+id/list_item_msg_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/hint_background_circle"
            android:textSize="10dp"
            android:text="1101"
            android:transformPivotX="90dp"
            android:maxLength="3"
            android:textColor="@color/list_item_hint_text_color" /><!--  android:visibility="gone"  -->
    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list_item_space_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>